{
  "name": "mediabox-v2-electron",
  "version": "2.0.0",
  "description": "MediaBox AI - Electron Desktop Dashboard",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "mediabox",
    "electron",
    "dashboard",
    "streaming"
  ],
  "author": "NetLite Network",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.netlite.mediabox",
    "productName": "MediaBox AI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!mediabox-v1",
      "!node_modules"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png"
    }
  },
  "dependencies": {
    "electron-widevinecdm": "^8.0.0"
  }
}
